<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="lt.ulop.homemedicalhelper">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".PressureAddActivity"
            android:label="Давление"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name=".PulseAddActivity"
            android:label="Пульс"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name=".TemperatureAddActivity"
            android:label="Температура"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name=".SugarAddActivity"
            android:label="Сахар"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>

        <meta-data android:name="AA_DB_NAME" android:value="medicalhelper.db" />
        <meta-data android:name="AA_DB_VERSION" android:value="1" />
    </application>

</manifest>
